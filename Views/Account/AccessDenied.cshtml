@{
    ViewData["Title"] = "Access Denied - KMSI";
    Layout = "_AuthLayout";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header" style="background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);">
            <div class="logo-section">
                <div class="logo-icon">
                    <i class="fas fa-ban"></i>
                </div>
                <h1 class="app-title">Access Denied</h1>
                <p class="app-subtitle">You don't have permission to access this resource</p>
            </div>
        </div>

        <div class="login-form-section text-center">
            <p class="mb-4">Your current user level does not have sufficient privileges to access this page.</p>
            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary">
                <i class="fas fa-home"></i>
                Return to Dashboard
            </a>
        </div>
    </div>
</div>