                        <i class="nav-icon fas fa-certificate"></i>
                        <span class="nav-text">Certificates</span>
                    </a>
                </div>
            </div>

            <!-- Finance -->
            <div class="nav-group">
                <div class="nav-group-title">Finance</div>
                <div class="nav-item">
                    <a href="/Billing" class="nav-link">
                        <i class="nav-icon fas fa-file-invoice-dollar"></i>
                        <span class="nav-text">Student Billing</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/Payroll" class="nav-link">
                        <i class="nav-icon fas fa-money-check-alt"></i>
                        <span class="nav-text">Teacher Payroll</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/BillingPeriod" class="nav-link">
                        <i class="nav-icon fas fa-calendar-week"></i>
                        <span class="nav-text">Billing Periods</span>
                    </a>
                </div>
            </div>

            <!-- Inventory -->
            <div class="nav-group">
                <div class="nav-group-title">Inventory</div>
                <div class="nav-item">
                    <a href="/Inventory" class="nav-link">
                        <i class="nav-icon fas fa-boxes"></i>
                        <span class="nav-text">Stock Management</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/BookRequisition" class="nav-link">
                        <i class="nav-icon fas fa-shopping-cart"></i>
                        <span class="nav-text">Book Requisition</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/StockMovement" class="nav-link">
