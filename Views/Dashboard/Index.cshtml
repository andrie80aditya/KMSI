@{
    ViewData["Title"] = "Dashboard";
    ViewData["Breadcrumb"] = "Dashboard";
}

<div class="dashboard">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h1 class="h3 mb-1">Welcome back, @User.FindFirst("FullName")?.Value!</h1>
                            <p class="text-muted mb-0">Here's what's happening at @User.FindFirst("CompanyName")?.Value today.</p>
                        </div>
                        <div class="text-end">
                            <p class="small text-muted mb-0">Today</p>
                            <p class="h5 mb-0">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stat-icon bg-primary text-white">
                                <i class="fas fa-user-graduate"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <p class="stat-label">Total Students</p>
                            <h3 class="stat-value">@ViewBag.Stats.TotalStudents</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stat-icon bg-success text-white">
                                <i class="fas fa-chalkboard-teacher"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <p class="stat-label">Total Teachers</p>
                            <h3 class="stat-value">@ViewBag.Stats.TotalTeachers</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stat-icon bg-warning text-white">
                                <i class="fas fa-file-invoice-dollar"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <p class="stat-label">Monthly Revenue</p>
                            <h3 class="stat-value">Rp @ViewBag.Stats.MonthlyBilling.ToString("#,##0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stat-icon bg-info text-white">
                                <i class="fas fa-user-plus"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <p class="stat-label">Pending Registrations</p>
                            <h3 class="stat-value">@ViewBag.Stats.ActiveRegistrations</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions & Recent Activity -->
    <div class="row">
        <!-- Quick Actions -->
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a href="/Student/Create" class="quick-action-card">
                                <div class="quick-action-icon bg-primary">
                                    <i class="fas fa-user-plus"></i>
                                </div>
                                <div class="quick-action-content">
                                    <h6>Add New Student</h6>
                                    <p class="text-muted small">Register new student</p>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4">
                            <a href="/Registration" class="quick-action-card">
                                <div class="quick-action-icon bg-success">
                                    <i class="fas fa-clipboard-list"></i>
                                </div>
                                <div class="quick-action-content">
                                    <h6>View Registrations</h6>
                                    <p class="text-muted small">Manage registrations</p>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4">
                            <a href="/Schedule" class="quick-action-card">
                                <div class="quick-action-icon bg-warning">
                                    <i class="fas fa-calendar-alt"></i>
                                </div>
                                <div class="quick-action-content">
                                    <h6>Class Schedule</h6>
                                    <p class="text-muted small">Manage schedules</p>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4">
                            <a href="/Billing" class="quick-action-card">
                                <div class="quick-action-icon bg-info">
                                    <i class="fas fa-file-invoice"></i>
                                </div>
                                <div class="quick-action-content">
                                    <h6>Generate Billing</h6>
                                    <p class="text-muted small">Create invoices</p>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4">
                            <a href="/Attendance" class="quick-action-card">
                                <div class="quick-action-icon bg-secondary">
                                    <i class="fas fa-clipboard-check"></i>
                                </div>
                                <div class="quick-action-content">
                                    <h6>Take Attendance</h6>
                                    <p class="text-muted small">Record attendance</p>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4">
                            <a href="/Reports" class="quick-action-card">
                                <div class="quick-action-icon bg-dark">
                                    <i class="fas fa-chart-bar"></i>
                                </div>
                                <div class="quick-action-content">
                                    <h6>View Reports</h6>
                                    <p class="text-muted small">Analytics & reports</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Recent Students</h5>
                    <a href="/Student" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentStudents != null && ((IEnumerable<dynamic>)ViewBag.RecentStudents).Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var student in ViewBag.RecentStudents)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="avatar-sm bg-light rounded-circle d-flex align-items-center justify-content-center">
                                                <i class="fas fa-user text-muted"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1">@student.FirstName @student.LastName</h6>
                                            <p class="text-muted small mb-0">@student.StudentCode</p>
                                        </div>
                                        <div class="flex-shrink-0">
                                            <small class="text-muted">@student.CreatedDate?.ToString("MMM dd")</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-users text-muted mb-3" style="font-size: 3rem; opacity: 0.3;"></i>
                            <p class="text-muted">No recent students</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Stats -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">System Overview</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="text-center">
                                <div class="h4 text-primary mb-1">@ViewBag.Stats.TotalSites</div>
                                <div class="small text-muted">Active Sites</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center">
                                <div class="h4 text-warning mb-1">@ViewBag.Stats.PendingExams</div>
                                <div class="small text-muted">Upcoming Exams</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">User Information</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="d-flex align-items-center mb-2">
                                <strong class="me-2">Company:</strong>
                                <span>@User.FindFirst("CompanyName")?.Value</span>
                            </div>
                            @if (!string.IsNullOrEmpty(User.FindFirst("SiteName")?.Value))
                            {
                                <div class="d-flex align-items-center mb-2">
                                    <strong class="me-2">Site:</strong>
                                    <span>@User.FindFirst("SiteName")?.Value</span>
                                </div>
                            }
                            <div class="d-flex align-items-center">
                                <strong class="me-2">Role:</strong>
                                <span class="badge bg-primary">@User.FindFirst("UserLevelName")?.Value</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    .stat-label {
        font-size: 0.875rem;
        color: var(--gray-600);
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .stat-value {
        font-size: 1.875rem;
        font-weight: 700;
        margin-bottom: 0;
        color: var(--gray-800);
    }

    .quick-action-card {
        display: flex;
        align-items: center;
        padding: 1rem;
        border: 1px solid var(--gray-200);
        border-radius: 8px;
        text-decoration: none;
        color: inherit;
        transition: all 0.2s ease;
        background: white;
    }

        .quick-action-card:hover {
            color: inherit;
            border-color: var(--primary-color);
            box-shadow: var(--shadow-md);
            transform: translateY(-2px);
        }

    .quick-action-icon {
        width: 48px;
        height: 48px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 0.75rem;
        font-size: 20px;
    }

    .quick-action-content h6 {
        margin-bottom: 0.25rem;
        font-weight: 600;
    }

    .quick-action-content p {
        margin-bottom: 0;
    }

    .avatar-sm {
        width: 36px;
        height: 36px;
    }

    @@media (max-width: 768px) {
        .col-xl-3.col-md-6

    {
        margin-bottom: 1rem;
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        font-size: 20px;
    }

    .stat-value {
        font-size: 1.5rem;
    }

    .quick-action-card {
        flex-direction: column;
        text-align: center;
        padding: 1.5rem 1rem;
    }

    .quick-action-icon {
        margin-right: 0;
        margin-bottom: 0.75rem;
    }

    }
</style>    